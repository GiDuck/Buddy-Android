<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:id="@+id/mainboard_reply_item_write_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainboard_reply_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"

                />

            <TextView
                android:id="@+id/mainboard_reply_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사용자 이름" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:orientation="vertical">


            <TextView

                android:id="@+id/mainboard_reply_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-06-07 18:70" />

            <TextView
                android:id="@+id/mainboard_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="내용입니다." />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/mainboard_modify_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainboard_reply_item_modify_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:visibility="gone">


            <EditText

                android:id="@+id/mainboard_modify_content"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/middleGray"
                android:gravity="top"
                android:hint="내용입니다."
                android:padding="8dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/mainboard_modifyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="수정하기" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>