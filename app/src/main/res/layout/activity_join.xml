<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gdtbg.buddy.buddy_01_join.buddy_01_join.Join">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원가입"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/join_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="닉네임" />

                    <EditText
                        android:id="@+id/nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="닉네임을 입력해주세요" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="모국어"

                        />

                    <Spinner
                        android:id="@+id/mainLng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/major" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="학습언어"

                        />

                    <Spinner
                        android:id="@+id/learnLng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/major" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="관심사 설정"

                        />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="4"
                        android:columnCount="4"
                        android:rowCount="3"

                        >

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:gravity="left">


                            <CheckBox
                                android:id="@+id/check_reading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="독서"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_exciting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="익사이팅"

                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_restaurant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="맛집"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_sports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="스포츠"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">


                            <CheckBox
                                android:id="@+id/check_movie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="영화"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">


                            <CheckBox
                                android:id="@+id/check_music"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="음악감상"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">



                            <CheckBox
                                android:id="@+id/check_art"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미술"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="게임"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">


                            <CheckBox
                                android:id="@+id/check_fasion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="패션"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"

                            android:gravity="left">


                            <CheckBox
                                android:id="@+id/check_news"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시사"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_animal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="동물"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:gravity="left">

                            <CheckBox
                                android:id="@+id/check_etc"
                                android:text="기타"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="확인" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
